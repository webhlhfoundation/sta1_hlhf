---
// Pricing Header
// ------------
// Description:  The header of the pricing table
// Properties:
// - classes: Additional classes to be added to the text field
// - type: The type of the pricing table (basic, featured)

// Props
type Props = {
	type?: 'basic' | 'featured'
	classes?: string
}

const { classes, type } = Astro.props
---

<header
	class:list={[
		'pricing__header',
		{ [` pricing__header--${type}`]: type },
		{ [`${classes}`]: classes }
	]}
>
	<slot />
</header>

<style>
	.pricing__header {
		@apply flex flex-col gap-6 p-6 transition-all duration-300;
	}
	.pricing__header--basic {
		@apply text-slate-400;
	}
	.pricing__header--featured {
		@apply text-primary-200;
	}
</style>
